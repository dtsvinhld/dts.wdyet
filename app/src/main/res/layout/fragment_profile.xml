<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_marginBottom="@dimen/fab_margin"
        android:padding="@dimen/activity_vertical_margin"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="176dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_um"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tint="@color/colorAccent"
            android:src="@color/colorAccent"/>

        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/txt_fullname_um"
                android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Studio"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/txt_username_um"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android.studio@android.com" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:textSize="@dimen/textSize_child"
        android:textColor="@color/itemTextColor"
        android:background="@drawable/background_item_um"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:text="         Tên hiển thị"
        android:drawableLeft="@drawable/heart"
        android:id="@+id/btn_um_fn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="@dimen/textSize_child"
        android:textColor="@color/itemTextColor"
        android:background="@drawable/background_item_um"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:text="         Đổi mật khẩu"
        android:drawableLeft="@drawable/heart"
        android:id="@+id/btn_um_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="@dimen/textSize_child"
        android:textColor="@color/itemTextColor"
        android:background="@drawable/background_item_um"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:text="         Bảo vệ tài khoản"
        android:drawableLeft="@drawable/heart"
        android:id="@+id/btn_um_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="@dimen/textSize_child"
        android:textColor="@color/itemTextColor"
        android:background="@drawable/background_item_um"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:text="         Đăng xuất"
        android:drawableLeft="@drawable/heart"
        android:id="@+id/btn_um_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>