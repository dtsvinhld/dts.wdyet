<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.com.dtsgroup.wdyet.Activities.Profile.Account.ChangePwActivity">

    <TextView
        android:padding="@dimen/nav_header_vertical_spacing"
        android:textColor="@color/colorPrimary"
        android:id="@+id/txt_cPw_noti"
        android:background="@color/colorAccent"
        android:text="Thay đổi đã được lưu lại"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="@dimen/fab_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edt_cPw_pw"
            android:inputType="textPassword"
            android:hint="Mật khẩu hiện tại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_cPw_nPw"
            android:inputType="textPassword"
            android:hint="Mật khẩu mới"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_cPw_nPw1"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/fab_margin"
            android:hint="Nhập lại mật khẩu mới"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:id="@+id/btn_changePw"
            android:textColor="#fff"
            android:text="Lưu thay đổi"
            android:background="@drawable/background_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_cPw_cancel"
            android:text="Hủy"
            android:background="@drawable/background_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
