<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="20dp"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:background="@color/gray"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.com.dtsgroup.wdyet.Activities.Profile.Account.RegisterActivity">

    <EditText
        android:id="@+id/edt_fn"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:hint="Họ tên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_un"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:hint="Tên đăng nhập"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_pw"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:hint="Mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_pw1"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:hint="Nhập lại mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:id="@+id/btn_rgr"
        android:background="@drawable/background_button"
        android:layout_marginBottom="10dp"
        android:text="Đăng kí"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textAllCaps="false"
        android:background="@color/gray"
        android:textColor="@color/itemTextColor"
        android:id="@+id/btn_back"
        android:layout_marginBottom="10dp"
        android:text="Quay lại đăng nhập"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
