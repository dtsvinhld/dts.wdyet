<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.com.dtsgroup.wdyet.Activities.Eatings.EatingActivity">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:maxWidth="@dimen/maxWidth_img_eating"
                android:scaleType="fitXY"
                android:src="@drawable/eating_pho"
                android:id="@+id/img_eating"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_img_eating" />

            <TextView
                android:textColor="@color/titleTextColor"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_header"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:gravity="center"
                android:text="Phở bò tái chín cho bữa sáng"
                android:id="@+id/txt_eating_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_rate"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="@dimen/marginRight_img"
                            android:src="@drawable/star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:gravity="center"
                            android:text="(4.5)"
                            android:id="@+id/txt_eating_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:gravity="center"
                            android:text="50.000 đánh giá"
                            android:id="@+id/txt_eating_rated"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></LinearLayout>

                    <LinearLayout
                        android:gravity="end"
                        android:layout_marginRight="@dimen/marginLayout_views"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/eye"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/heart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="@dimen/marginLayout_views"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="1.111.111 views"
                            android:id="@+id/txt_eating_views"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="2000 liked"
                            android:id="@+id/txt_eating_liked"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:padding="@dimen/padding_text_eating"
                android:text="Phở bò tái chín cho bữa sáng Phở bò tái chín cho bữa sáng Phở bò tái chín cho bữa sáng Phở bò tái chín cho bữa sáng Phở bò tái chín cho bữa sáng Phở bò tái chín cho bữa sáng Phở bò tái chín cho bữa sáng Phở bò tái chín cho bữa sáng "
                android:id="@+id/jT_eating_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="@dimen/marginRight_img"
                    android:src="@drawable/list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_header"
                    android:text="Công thức"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="@dimen/marginRight_img"
                    android:textSize="@dimen/textSize_child"
                    android:textColor="@color/colorPrimary"
                    android:text="5 loại"
                    android:id="@+id/txt_eating_mats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:padding="@dimen/padding_text_eating"
                android:text="Phở bò tái chín cho bữa sáng\n\nPhở bò tái chín cho bữa sáng\n\nPhở bò tái chín cho bữa sáng\n\nPhở bò tái chín cho bữa sáng\n\nPhở bò tái chín cho bữa sáng"
                android:id="@+id/jT_eating_element"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:padding="@dimen/nav_header_vertical_spacing"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="@dimen/marginRight_img"
                    android:src="@drawable/rotate_to_right_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_header"
                    android:text="Cách thức thực hiện"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:padding="@dimen/padding_text_eating"
                android:id="@+id/jT_eating_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_noti_like"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_noti_like"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/fab_margin"
            android:text="Đã thêm vào danh sách yêu thích của bạn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_noti_like"
            android:textAllCaps="false"
            android:background="@color/colorPrimaryDark"
            android:paddingRight="@dimen/fab_margin"
            android:gravity="center|end"
            android:textColor="@color/colorAccent"
            android:text="Xem"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
