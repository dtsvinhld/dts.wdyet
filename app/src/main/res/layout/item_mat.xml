<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:padding="@dimen/nav_header_vertical_spacing"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_mat"
        android:background="@drawable/background_layout_item_mat"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item_mat"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:padding="@dimen/nav_header_vertical_spacing"
            android:gravity="center"
            android:id="@+id/txt_item_mat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_mat_1"
        android:background="@drawable/background_layout_item_mat"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item_mat_1"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:padding="@dimen/nav_header_vertical_spacing"
            android:gravity="center"
            android:id="@+id/txt_item_mat_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_mat_2"
        android:background="@drawable/background_layout_item_mat"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item_mat_2"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:padding="@dimen/nav_header_vertical_spacing"
            android:gravity="center"
            android:id="@+id/txt_item_mat_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>